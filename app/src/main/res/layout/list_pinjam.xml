<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCFFE6">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/detail_pinjam"
                    android:layout_width="97dp"
                    android:layout_height="121dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/info" />

                <TextView
                    android:id="@+id/buku_pinjam"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/detail_pinjam"
                    android:background="@drawable/shadow"
                    android:gravity="center"
                    android:text="Judul Buku"
                    android:textColor="@color/purple_blue"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/value_nama_pinjam"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/buku_pinjam"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="6dp"
                    android:layout_toEndOf="@+id/detail_pinjam"
                    android:background="@drawable/nama_shadow"
                    android:gravity="center"
                    android:text="Nama Peminjam "
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/label_tgl_pinjam"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/value_nama_pinjam"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="6dp"
                    android:layout_toEndOf="@+id/detail_pinjam"
                    android:text="Tgl Pinjam:"
                    android:textColor="@color/purple"
                    android:textSize="10dp"
                    android:textStyle="" />

                <TextView
                    android:id="@+id/value_tgl_pinjam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/value_nama_pinjam"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:layout_toEndOf="@+id/label_tgl_pinjam"
                    android:text="Tanggal Peminjaman"
                    android:textColor="@color/purple"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/label_tgl_kembali"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_tgl_pinjam"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_toEndOf="@+id/detail_pinjam"
                    android:text="Tgl Kembali:"
                    android:textColor="@color/purple"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/value_tgl_kembali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/value_tgl_pinjam"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:layout_toEndOf="@+id/label_tgl_kembali"
                    android:text="Tanggal Kembali"
                    android:textColor="@color/purple"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/label_status"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_tgl_kembali"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_toEndOf="@+id/detail_pinjam"
                    android:text="Status:"
                    android:textColor="@color/purple"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/value_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/value_tgl_kembali"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:layout_toEndOf="@+id/label_status"
                    android:text="Status Peminjaman"
                    android:textColor="@color/purple"
                    android:textSize="10dp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>